<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="AppTheme.Home" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="textItemTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>
    <style name="textItemSubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:maxLength">70</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="textItemDateTimeTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:lines">1</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
      </style>
</resources>